<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Luna Shop</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @using BHMTOnline.Models

<style type="text/css">
    body {
        background-color: #F0F0F0;
    }

    .navbar-inverse {
        background-color: #0c80fb;
        border-color: #39B54A;
    }

    .top_header {
        background-color: #000;
        float: right;
        color: white;
    }

        .top_header a {
            text-decoration: none;
        }

    .form-inline {
        padding-top: 10px;
        float: right;
    }

    .navbar-inverse .navbar-nav > li > a {
        color: white;
        font-size: x-large;
    }

    .navbar-inverse .navbar-brand {
        color: white;
    }

    .navbar-inverse .navbar-nav > li > a {
        color: white;
        font-size: large;
    }

        .navbar-inverse .navbar-nav > li > a:hover {
            color: black;
        }

    .navbar-brand {
        color: cadetblue;
    }

    .giohang {
        color: white;
    }

    .btn-card a:hover{
        color: #f00;
    }
</style>
</head>

<body>
    @{ var u = Session["use"] as BHMTOnline.Models.NguoiDung; }

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="top_header col-md-12">

            <div class="row">
                @*<div class="col-sm-2"><img class="navbar-brand" src="~/HinhanhSP/logo1.jpg" width="20" height="20" style="padding:0" /></div>*@
                <div class="col-sm-4 col-md-0" style="font-size:large"></div>

                <div class="col-sm-4 col-md-0 btn-card" style="padding-left:250px">
                    @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                </div>
                @*@Html.Action("GioHangPartial", "GioHang",new { @style = "color:while" })*@
                @{ if (u != null)
                    {
                        <div class="col-sm-4 col-md-0">
                            Xin chào : @u.Email
                            &nbsp;
                            @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                            <a style="color:red" href="/User/DangXuat"> ĐĂNG XUẤT</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-4 col-md-0">
                            <a style="color:white" href="/User/DangKy"> Đăng ký</a>
                            &nbsp;
                            <a style="color:white" href="/User/DangNhap"> Đăng nhập</a>
                        </div>
                    }
                }

            </div>

        </div>
        <div class="container">

            <div class="navbar-header">
                <img class="navbar-brand" src="~/HinhanhSP/iconheader.jpg" width="50" height="50" style="padding: 2px; border-radius: 25px; " />
                @Html.ActionLink("Luna Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" title="PHUKIEN">
                            @*<span><i class="fas fa-desktop"></i></span>*@
                            <span>Phụ kiện</span>

                        </a>
                    </li>
                    <li>
                        <a href="/Home/Contact" title="LIENHE">
                            @*<span><i class="fas fa-headphones"></i></span>*@
                            <span>Liên hệ</span>

                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "DonHangs")">
                            <span>Đơn hàng</span>
                        </a>
                    </li>
                    <li>

                    </li>

                </ul>
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    @*<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>*@
                </form>

            </div>

        </div>
    </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <img class="img-responsive" src="~/HinhanhSP/imgbanner.jpg" />
        </div>
        <br />
    </div>
    <footer class="bg-info" style="background: black; color: white">
        <div class="row" style="padding-left:100px">
            <div class="col-md-3 col-sm-6">
                <h2>Bảo hành</h2>
                <span>Chính sách mua hàng</span>
                <br />
                <span>Chính sách bảo hành</span>
                <br />
                <span>Trung tâm bảo hành</span>
                <br />
                <span>Tra cứu bảo hành</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Liên kết</h2>
                <span>Tin tức Mobile</span>
                <br />
                <span>Lập trình Web</span>
                <br />
                <span>GenkVN</span>
                <br />
                <span>Dân trí</span>


            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Thông tin</h2>
                <span>Về chúng tôi</span>
                <br />
                <span>Liên hệ</span>
                <br />
                <span>Góp ý</span>
                <br />
                <span>Tra cứu</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Theo dõi</h2>
                <span>Kênh youtube</span>
                <br />
                <span>Fanpage</span>
                <br />
                <span>Shopee</span>
                <br />
                <span>Group</span>

            </div>
        </div>
        <hr />
        <center> <p class="bg-primary" style="background: #0c80fb;">&copy; @DateTime.Now.Year - Healer</p></center>
    </footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

